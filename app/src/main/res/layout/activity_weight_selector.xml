<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WeightSelectorActivity">


    <com.example.michael.rhino.BarbellDrawView
            android:id="@+id/barbell_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"

    />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/barbell_view"
            android:layout_height="wrap_content" android:id="@+id/linearLayout2">
        <com.example.michael.rhino.WeightButton
                android:id="@+id/weightButton45"
                app:weightText="45"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"

        >
        </com.example.michael.rhino.WeightButton>
        <com.example.michael.rhino.WeightButton
                android:id="@+id/weightButton35"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:weightText="35"

        >
        </com.example.michael.rhino.WeightButton>
        <com.example.michael.rhino.WeightButton
                android:id="@+id/weightButton25"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:weightText="25"

        />
        <com.example.michael.rhino.WeightButton
                android:id="@+id/weightButton10"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:weightText="10"

        >
        </com.example.michael.rhino.WeightButton>
        <com.example.michael.rhino.WeightButton
                android:id="@+id/weightButton5"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:weightText="5"

        >
        </com.example.michael.rhino.WeightButton>
        <com.example.michael.rhino.WeightButton
                android:id="@+id/weightButton2"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:weightText="2.5"

        />
    </LinearLayout>
    <Button
            android:text="Done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="done"/>

</androidx.constraintlayout.widget.ConstraintLayout>